@using RestaurantApp_Razor.Core
@model Restaurant


<div class="card mb-3">
    <div class="card-header">
        <h3>@Model.Name</h3>
    </div>
    <div class="card-body">
        <p><b>Location: </b>@Model.Location</p>
        <p><b>Cuisine: </b>@Model.Cuisine</p>
    </div>
    <div class="card-footer">
        <a class="btn btn-primary" asp-page="Detail" asp-route-restaurantId="@Model.Id">Details</a>
        <a class="btn btn-secondary" asp-page="Edit" asp-route-restaurantId="@Model.Id">Edit</a>
        <a class="btn btn-danger" asp-page="Delete" asp-route-restaurantId="@Model.Id">Delete</a>
    </div>
</div>


