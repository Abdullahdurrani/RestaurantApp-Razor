@page
@model RestaurantApp_Razor.Pages.Restaurants.ListModel
@{
}

<h2>Restaurants</h2>

<div>
    <a class="btn btn-secondary" asp-page="./Edit">Add new Restaurant</a>
    <br /><br />
</div>

<form method="get">
    <div class="form-group">
        <div class="input-group">
            <input type="search" class="form-control" asp-for="SearchTerm" />
            <span class="input-group-button">
                <button class="btn btn-primary">Search</button>
            </span>
        </div>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(m => m.Restaurants.FirstOrDefault().Name)</th>
            <th>@Html.DisplayNameFor(m => m.Restaurants.FirstOrDefault().Location)</th>
            <th>@Html.DisplayNameFor(m => m.Restaurants.FirstOrDefault().Cuisine)</th>
        </tr>
    </thead>
   
    @foreach (var restaurant in Model.Restaurants)
    {
        <tr>
            <td>@restaurant.Name</td>
            <td>@restaurant.Location</td>
            <td>@restaurant.Cuisine</td>
            <td>
                <a class="btn btn-primary" asp-page="Detail" asp-route-restaurantId="@restaurant.Id">Details</a>
                <a class="btn btn-primary" asp-page="Edit" asp-route-restaurantId="@restaurant.Id">Edit</a>
            </td>
        </tr>
    }

</table>